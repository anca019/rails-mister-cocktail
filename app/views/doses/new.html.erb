<h3>Add an ingredient</h3>
<div>
	<%= simple_form_for [@cocktail, @dose] do |f| %>
	  <%= f.association :ingredient %>
	  <%= f.input :description %>
	  <%= f.button :submit, class: "button" %>
	<% end %>
	<br>
	<%= link_to "Create new cocktail", new_cocktail_path, class: "button" %>
</div>
