<h1>Delicious cocktails</h1>

<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path 'mojito-cocktails.jpg' %>');">
            <%= cocktail.name %>
          </div>
          <%= link_to "Details", cocktail_path(cocktail), class: "btn btn-warning btn-sm" %>
        </div>
    <% end %>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>