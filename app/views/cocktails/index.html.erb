<div id="cover" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path 'seaside.jpg' %>');">
  <div class="cover-header">
    <h1>Delicious cocktails</h1>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  <div>
  <div class="container">
    <div class="row">

      <% @cocktails.each do |cocktail| %>
          <div class="col-12 col-md-6 col-lg-3">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1593105388446-7cea7f9255e4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80');">
              <%= cocktail.name %>
            </div>
            <%= link_to "Details", cocktail_path(cocktail), class: "btn btn-warning btn-sm" %>
          </div>
      <% end %>
    </div>
  </div>
</div>