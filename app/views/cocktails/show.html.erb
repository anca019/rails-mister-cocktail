     <p><%= @cocktail.name %></p>
     
     <ul>
     <% @cocktail.doses.each do |dose| %>
         <li><%= dose.description %> <%= dose.ingredient.name %></li>
         <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
     <% end %>
     </ul>
    
     <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>