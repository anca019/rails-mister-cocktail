     <p><%= @cocktail.name %></p>
     <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
     <ul>
     <% @cocktail.doses.each do |dose| %>
         <li><%= dose.description %> <%= dose.ingredient.name %></li>
         <%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
     <% end %>
     </ul>
    
     <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>