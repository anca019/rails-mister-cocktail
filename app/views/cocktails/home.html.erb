<%= render 'shared/navbar' %>
<div id="cover" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'cocktail-background.jpg' %>);">
    <h2>CocktailsOnRails</h2>
    
        <%= simple_form_for :search, url: cocktails_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" style="width: 300px" id="search_query" placeholder="Search by name or ingredient" />
            <button name="button" type="submit" class="btn-search">
              <i class="fa fa-search"></i> 
            </button>
          </div>
        <% end %>
   
</div>
  <div class="container">
    <div class="row">

      <% Cocktail.all.each do |cocktail| %>
          <div class="col-12 col-md-6 col-lg-4">
            <% if cocktail.photo.present? %>
              <% background_url = cl_image_path cocktail.photo.key, width: 400, height: 500, crop: :fill %>
            <% else %>
              <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
            <% end %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
              <%= link_to cocktail.name, cocktail_path(cocktail), class: "show" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
