<%= render 'shared/navbar' %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 add-cocktail">
      <h3>Create a new cocktail</h3>
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, 'Submit', class: 'button' %>
      <% end %>
    </div>
  </div>
</div>

